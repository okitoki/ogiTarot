rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /blog/posts/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.admin == true
      );
    }
    match /blog/images/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.admin == true
      );
    }
  }
}
